# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{go,mod,sum}]
indent_style = tab
indent_size = 4
# gofmt uses tabs for indentation, spaces for alignment
tab_width = 4

[Makefile]
indent_style = tab
indent_size = 4
tab_width = 4

[*.{adoc,md}]
trim_trailing_whitespace = false

[*.{yml,yaml,json,sh}]
indent_style = space
indent_size = 4
